{
  "name": "npm-publish-package-test",
  "version": "0.0.3",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gapon2401/my-react-typescript-package.git"
  },
  "scripts": {
    "build": "pnpm build:cls && pnpm build:esm && pnpm build:cjs",
    "build:cls": "rimraf dist",
    "build:esm": "tsc",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "test": "jest --config jestconfig.json",
    "changelog": "conventional-changelog -i CHANGELOG.md -s -r 0",
    "version:patch": "npm version patch && npm run changelog",
    "version:minor": "npm version minor && npm run changelog",
    "version:major": "npm version major && npm run changelog",
    "prepare": "husky install && npm run build",
    "prepublishOnly": "npm test && npm run lint:fix && npm run lint"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "react",
    "typescript",
    "npm-publish-package-test"
  ],
  "author": "Rogger Ortiz <rogger.ortiz.br@gmail.com> (https://github.com/roggerortiz)",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@commitlint/cli": "17.4.4",
    "@commitlint/config-conventional": "17.4.4",
    "@testing-library/react": "14.0.0",
    "@types/jest": "29.4.0",
    "@types/react": "18.0.28",
    "@typescript-eslint/eslint-plugin": "5.54.0",
    "@typescript-eslint/parser": "5.54.0",
    "eslint": "8.35.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "husky": "8.0.3",
    "jest": "29.4.3",
    "jest-canvas-mock": "2.4.0",
    "jest-environment-jsdom": "29.4.3",
    "lint-staged": "13.1.2",
    "prettier": "2.8.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "rimraf": "4.3.0",
    "standard": "17.0.0",
    "ts-jest": "29.0.5",
    "typescript": "4.9.5"
  }
}
